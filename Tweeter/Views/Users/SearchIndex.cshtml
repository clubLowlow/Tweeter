@model IEnumerable<Tweeter.Models.User>

@{
    ViewBag.Title = "SearchIndex";
}

<h2>Find Friends</h2>

<p>
    @using (Html.BeginForm("SearchIndex","Users",FormMethod.Get)) { 
        <p>Name : @Html.TextBox("SearchString")<br />
            <input type="submit" value="Filter" />
        </p>
    }
</p>
<table>
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Username)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.About)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Website)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.ActionLink(item.Username, "Details", new { id=item.ID })
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.About)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Website)
        </td>
    </tr>
}

</table>
